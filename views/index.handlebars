<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			{{!-- <img src="/public/assets/img/burger.png" alt="Eat-Da-Burger App"> --}}
			<h1>Eat-Da-Street-Burger App</h1>
			<p></p>
		</div>
	</div>
	<!-- end .row -->

	<div class="row">
		<div class="col-sm-6">


			<h2>Burgers Available To Eat!</h2>

			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}

				<li>
					<span class="burgerName"><strong> {{this.id}} - {{this.burger_name}} </strong></span>

					<form class="form-inline" id="formID" action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="btn-primary" id="devourBtn" type="submit">Devour It!</button>
					</form>

					{{!-- <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
					 data-newDevoured="{{devour}}"><span class="fa fa-trash"></span>Delete</button> --}}
					{{!-- <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
					 data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button> --}}
				</li>

				{{/unless}}
				{{/each}}

			</ul>
		</div>

		<div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>

			{{#each burgers}}
			{{#if devoured}}
			<li>
				<span class="burgerName"><strong> {{this.id}} - {{this.burger_name}} </strong></span>

				<button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span
					 class="fa fa-trash"></span>Delete</button>
			</li>

			{{/if}}
			{{/each}}

		</div>

	</div>
	<!-- end .row -->

	<div class="row">
		<div class="center col-sm-12">



			<form class="create-update-form" action="/" method="POST">

				<div class="form-group">
					<p class="instructions">Enter a burger you want to order and click the Submit Order button.</p>
					<input type="text" id="ca" name="burger_name">
				</div>

				<button class="btn-primary" type="submit">Submit Order</button>
			</form>

		</div>

	</div>
	<!-- end .row -->

</div>